# Generic platform for Linux x86_64 targets.
platform(
    name = "linux_arm64",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:arm64",
    ],
    visibility = ["//visibility:public"],
)

# EFI preboot environment for x86_64 machines.
platform(
    name = "efi_amd64",
    constraint_values = [
        "@platforms//os:uefi",
        "@platforms//cpu:arm64",
    ],
    visibility = ["//visibility:public"],
)

# Linux x86_64 platform with static linking
# (i.e. Metropolis node, scratch containers...).
platform(
    name = "linux_arm64_static",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:arm64",
        "//build/platforms/linkmode:musl-static",
    ],
    visibility = ["//visibility:public"],
)
