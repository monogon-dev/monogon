filegroup(
    name = "all",
    srcs = glob(
        ["**"],
        exclude = [
            "CryptoPkg/Library/OpensslLib/openssl/boringssl/fuzz/*_corpus/**",
            "CryptoPkg/Library/OpensslLib/openssl/fuzz/corpora/**",
        ],
    ),
)

genrule(
    name = "firmware",
    srcs = [":all"],
    outs = [
        "QEMU_EFI.fd",
        "QEMU_VARS.fd",
    ],
    cmd = """
    (
        # The edk2 build does not like Bazel's default genrule environment.
        set +u

        cd {path}
        . edksetup.sh
        make -C BaseTools/Source/C
        build -DTPM2_ENABLE -DSECURE_BOOT_ENABLE -t GCC5 -a AARCH64 -b RELEASE -p $$PWD/ArmVirtPkg/ArmVirtQemu.dsc
    ) > /dev/null

    cp {path}/Build/ArmVirtQemu-AARCH64/RELEASE_GCC5/FV/QEMU_EFI.fd $(RULEDIR)
    cp {path}/Build/ArmVirtQemu-AARCH64/RELEASE_GCC5/FV/QEMU_VARS.fd $(RULEDIR)
    """.format(path = package_relative_label(":all").workspace_root),
    visibility = ["//visibility:public"],
)
